{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "indent": ["error", "tab"],
        "semi": ["error", "always"],
        "no-tabs":"off",
        "camelcase": "off"
    }
}
